{% extends 'base.html.twig' %}

{% block title %}MANIFESTATIONS{% endblock %}

{% block body %}
<body>
<section class="container_panier">
<div class="table_salle">
    <table class="customers">
        <thead>
            <tr>
                <th>Genre</th>
                <th>Titre</th>
                <th>Descript</th>
                <th>Casting</th>
                <th>Prix</th>
                <th>Date</th>
                <th>Horaire</th>
                <th>Réserver</th>
            </tr>
        </thead>
        <tbody>
        {% for manif in manifs %}
            <tr>
                <td>{{ manif.genre }}</td>
                <td>{{ manif.titre }}</td>
                <td>{{ manif.descript }}</td>
                <td>{{ manif.casting }}</td>
                <td>{{ manif.prix }}</td>
                <td>{{ manif.date }}</td>
                <td>{{ manif.horaire }}</td>
                <td><a href="{{manif.id}}" id="reserver">Réserver</a></td>


            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </section>
</body>
{% endblock %}
